<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
        
        <% taskList.forEach(task => {%>
            <form action="/delete" method="post">
                <div class="item">
            <input name="checkbox" type="checkbox" onchange="this.form.submit()" value="<%= task.id %>">
            <p><%= task.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
       <% }); %>

    <form action="/" class="item" method="post">
        <input type="text" name="task" placeholder="New Item" autocomplete="off">
        <button type="submit" name="submitBtn" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>
